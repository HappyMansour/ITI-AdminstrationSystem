@model Administration.Models.Departments


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <div class="modal-title"><b>Are you sure you want to delete this?</b></div>
            <button class="close" data-dissmiss="modal">&times;</button>
        </div>
        @using (Ajax.BeginForm("DeleteSection", "Department", new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "div1", HttpMethod ="post" }))
        {
            @Html.HiddenFor(u => u.DepartmentId)
            <div class="modal-body" id="edit-mod-body">
                <div class="container">
                    <div>
                        <dl class="dl-horizontal">


                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                        </dl>

                    </div>
                </div>
            </div>


            <div class="form-group modal-footer">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Delete" class="btn btn-default"  />
                </div>
            </div>
        }

    </div>
</div>

