@model Administration.Models.Departments
 
    <div class="form-group">
        @Html.LabelFor(a => a.Name, new { @class = "col-sm-2" })
        <div class="col-sm-6">
            @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Capacity, new { @class = "col-sm-2" })
        <div class="col-sm-6">
            @Html.TextBoxFor(a => a.Capacity, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.InstructorId, new { @class = "col-sm-2" })
        <div class="col-sm-6">
            @Html.DropDownListFor(a => a.InstructorId, ViewBag.mng as SelectList, new { @class = "form-control" })
        </div>
    </div>


