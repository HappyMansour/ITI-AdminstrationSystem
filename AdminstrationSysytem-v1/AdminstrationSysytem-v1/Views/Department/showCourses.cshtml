@model IEnumerable<Administration.Models.Courses>

@{
    ViewBag.Title = "showCoursesView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Courses</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LectureDuration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LabDuration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalGrade)
        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LectureDuration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LabDuration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalGrade)
        </td>
        
    </tr>
}

</table>
