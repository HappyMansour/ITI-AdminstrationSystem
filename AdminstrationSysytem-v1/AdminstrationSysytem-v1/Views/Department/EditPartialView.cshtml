@model Administration.Models.Departments

<div class="modal-dialog">
    <div class="modal-content">
    <div class="modal-header">
        <div class="modal-title"><h5>Update Department</h5></div>
        
    </div>

    @using (Ajax.BeginForm("Edit","Department", new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "div1", HttpMethod = "POST" }))
    {
        <div class="modal-body" id="edit-mod-body">
            <div class="container">
                <div class="form-group row">
                    @Html.HiddenFor(a => a.DepartmentId)
                    @Html.LabelFor(a => a.Name, new { @class = "col-sm-2" })
                    <div class="col-sm-6">
                        @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(a => a.Capacity, new { @class = "col-sm-2" })
                    <div class="col-sm-6">
                        @Html.TextBoxFor(a => a.Capacity, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(a => a.InstructorId, new { @class = "col-sm-2" })
                    <div class="col-sm-6">
                        @Html.DropDownListFor(a => a.InstructorId, ViewBag.mng as SelectList, new { @class = "form-control" })
                    </div>
                </div>
             
            </div>
        </div>

        <div class="form-group modal-footer">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" data-dissmiss="modal" />
            </div>
        </div>
    }


    </div>
</div>


